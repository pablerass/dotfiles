alias reload=". ~/.zshrc"

## Common commands

alias grep='grep --color=auto'

alias ll='ls -ahlF'

alias vi='vim'

alias log='tail -f -n50 '
alias logsys='tail -f -n50 /var/log/syslog'

alias fn='find . -name'

alias reload!='. ~/.zshrc'

alias s='sudo '

alias mirror='rsync -avh --delete'

## Tools
# Ansible
alias ap='ansible-playbook'

# Docker
alias drun='docker run'
alias dstop='docker stop'
alias dps='docker ps'
alias dpsa='docker ps --all'
alias drm='docker rm'
alias drmf='docker rm -f'
alias drmi='docker rmi'
alias dimg='docker images'
alias dpush='docker push'
alias dpull='docker push'

# Python
alias wo='workon'
alias de='deactivate'
alias mkve='mkvirtualenv'
alias mkve2='mkvirtualenv -p python2'
alias mkve3='mkvirtualenv -p python3'
alias rmve='rmvirtualenv'
alias lsve='lsvirtualenv -b'

# Vagrant
alias vup='vagrant up'
alias valt='vagrant halt'
alias vssh='vagrant ssh'

## Monitoring
# Disk
alias df='df -h'
alias du='du -ch'
alias du1='du -ch --max-depth=1'
alias size='du -hs'

# Network
alias ports='netstat -tulanp'
alias listen='sudo netstat -plunt'

# Memory
alias meminfo='free -m -l -t'

# Processes
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'

# CPU
alias cpuinfo='lscpu'

# xclip
alias cxclip='xclip -selection clipboard'

# bin
alias aaws='source ~/bin/saws-auth'
