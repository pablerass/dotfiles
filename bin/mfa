#!/bin/bash

CONF_DIR=$HOME/conf/mfa
CONF=default

if [ ! -z "$1" ]; then
    CONF=$1
fi

CONF_FILE=$CONF_DIR/$CONF

if [ ! -e $CONF_FILE ]; then
    echo "MFA $CONF does not exists" 1>&2
    exit 1
fi

KEY=$(cat $CONF_FILE | grep -E "^key" | cut -d';' -f2)

oathtool --totp --base32 $KEY | tee /dev/tty | xclip -selection c