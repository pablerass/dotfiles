[core]
editor = vim
autocrlf = input

[user]
name = Pablo Mu√±oz
email = pablerass@gmail.com

[include]
path = ~/.gitconfig.local

[color]
ui = auto
branch = auto
diff = auto
status = auto
[color "branch"]
current = yellow reverse
local = yellow
remote = green
[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
[color "status"]
added = yellow
changed = green
untracked = cyan

[alias]
aa = add --all
br = branch
ca = commit -a
co = checkout
cob = checkout -b
dc = diff --cached
st = status
lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
lo = log --color --pretty=oneline --abbrev-commit --
lp = log -p --
lf = log --follow --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
posh = ! "git push origin $(git symbolic-ref HEAD --short)"
polh = ! "git pull origin $(git symbolic-ref HEAD --short)"
resolve = ! "$EDITOR $(git diff --name-only --diff-filter=U)"
gredit = ! "f() { $EDITOR $(git grep --name-only $@); }; f"
unstage = reset HEAD --
last = log -1 HEAD
cf = clean -fdx
lone = clone --depth 1
subinit = submodule update --init --recursive

[grep]
lineNumber = true

[merge]
tool = vimdiff
conflictstype = diff3

[mergetool]
prompt = false
keepBackup = false

[diff]
tool = vimdiff

[difftool]
prompt = false

[push]
default = simple
followTags = true

[pull]
rebase = true

[branch]
autosetuprebase = always

[credential]
helper = cache --timeout=3600

